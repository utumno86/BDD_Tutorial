<!DOCTYPE html>
<html>
  <head>
    <title>BlogApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header role="banner">
      <div class="container">
        <div class="row">
          <div class= "col-md-12">
            <ul class="nav nav-pills">
              <li class="nav-item">
                <a class="nav-link active"><%= link_to "Blog", root_path %></a>
              </li>
              <% if !user_signed_in? %>
                <li class="nav-item ">
                  <a class="nav-link"><%=link_to 'Sign up', new_user_registration_path %></a>
                </li>
                <li class="nav-item ">
                  <a class="nav-link"><%=link_to 'Sign in', new_user_session_path %></a>
                </li>
              <% end %>
              <% if user_signed_in? %>
                <p class="navbar-text">
                  Signed in as <%= "#{current_user.email}" %>
                </p>
              <% end %>
              <li class="nav-item ">
                <a class="nav-link"><%=link_to 'Sign out', destroy_user_session_path, method: :delete %></a>
              </li>
              <li class="nav-item">
                <a class="nav-link"><%=link_to 'Authors', "#" %></a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </header>
    <div class="container">
      <div class="row">
        <div class= "col-md-12">
          <% flash.each do |key, message| %>
            <div class="text-center alert alert-<%= key == 'notice' ? 'success' : 'danger' %>">
              <%= message %>
            </div>
          <% end %>
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
